<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp"
    android:orientation="horizontal"
    android:id="@+id/rl_dis_item_prevue">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/rl_dis_item_img">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_dis_newsitem"
            android:layout_width="150dip"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_default" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@id/iv_dis_newsitem"
            android:layout_alignBottom="@id/iv_dis_newsitem"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_play"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/tv_dis_prevue_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/rl_dis_item_img"
            android:text="我是中国人民的儿子"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_dis_prevue_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dis_prevue_title1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_dis_newsitem"
            android:text="标题2内容"
            android:textColor="#88000000" />
    </LinearLayout>

</LinearLayout>