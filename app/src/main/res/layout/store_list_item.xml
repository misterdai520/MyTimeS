<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="380dp"
              android:minHeight="380dp"
              android:background="#EEE0E5"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:background="#E0FFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_color"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:background="#7CFC00" />

        <TextView
            android:id="@+id/tv_catagory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_color"
            android:layout_weight="1"
            android:text="玩具模型"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_catagory_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/img_right_arrow_account"
            android:text="更多"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_catagory_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_catagory_sublist0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_catagory_sublist0_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:text="反派领袖"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_catagory_sublist0_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥499.0"
                    android:textColor="#ff0000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_catagory_sublist1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_catagory_sublist1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:text="反派领袖电能面具" />

                <TextView
                    android:id="@+id/tv_catagory_sublist1_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥499.0"
                    android:textColor="#ff0000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_catagory_sublist2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_catagory_sublist2_title"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="反派领袖电能面具" />

                <TextView
                    android:id="@+id/tv_catagory_sublist2_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥499.0"
                    android:textColor="#ff0000" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>