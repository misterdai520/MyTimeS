<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_content_container_detials"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/actor_detail_top_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="255dp">
            <LinearLayout
                android:layout_marginTop="33dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="120dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_paly_movie_detials"
                        android:background="@drawable/lead_bg2"
                        android:layout_width="120dp"
                        android:layout_height="155dp" />
                    <LinearLayout
                        android:id="@+id/ll_movietype_play_movie_detials"
                        android:padding="1dp"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_ll_movie_name_detials_buyticket"
                        android:textSize="18sp"
                        android:text="星球大战:原觉醒"
                        android:lines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_ll_movie_us_detials_buyticket"
                        android:textSize="10sp"
                        android:text="Starts Wars:The"
                        android:textColor="#f80"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:id="@+id/tv_score_detials_buyticket"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:textColor="#000"
                            android:text="7.7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_timemovie_detials_buyticket"
                        android:padding="1dp"
                        android:text="135分钟"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_typemovie_detials_buyticket"
                        android:padding="1dp"
                        android:text="动作/冒险/奇幻"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_showTime_detials_buyticket"
                        android:text="2016年1月2日上映"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="9dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btn_wantsee_detials_buyticket"
                            android:layout_marginRight="5dp"
                            android:text="我想看"
                            android:background="@drawable/goshopping_btn"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="30dp" />
                        <Button
                            android:id="@+id/btn_wantscore_detials_buyticket"
                            android:layout_marginLeft="5dp"
                            android:text="我要评分"
                            android:textColor="#0f0"
                            android:background="@drawable/title_bar_movie_cinema_switch_view_background"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="30dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_commonSpecial_play_movie_detial_buyticket"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btn_scroll_buyticket_detials"
                android:layout_alignParentBottom="true"
                android:text="查票讯/购票"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:background="@drawable/bt_big_orange"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </LinearLayout>
</LinearLayout>