<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_vido_list_item"
            android:layout_margin="10dp"
            android:background="@drawable/img_default_300x200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_alignBottom="@id/iv_vido_list_item"
            android:layout_alignRight="@id/iv_vido_list_item"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_play"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/tv_name_vido_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预告片：叶问"/>
        <TextView
            android:id="@+id/tv_time_vido_list_item"
            android:text="片长：90秒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>