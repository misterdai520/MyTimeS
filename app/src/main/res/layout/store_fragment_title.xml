<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_store_title_bg"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#0075c4"
              android:gravity="center_vertical"
              android:padding="5dp">

    <ImageView
        android:id="@+id/iv_scan_title_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/mall_home_scan"/>

    <TextView
        android:id="@+id/tv_search_title_store"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/store_shap_title_bg"
        android:clickable="true"
        android:drawableLeft="@drawable/title_bar_search_zoomin"
        android:drawablePadding="5dp"
        android:editable="false"
        android:gravity="center_vertical"
        android:hint="搜索正版电影周边"
        android:padding="10dp"
        android:textSize="16sp"/>


    <ImageView
        android:id="@+id/iv_car_title_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/mall_home_cart_icon"/>
</LinearLayout>