<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#55000000"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_descmovie_add_detials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="18sp"
            android:text="一群被电影召唤的人，汇聚到了Mtime，
        一边享受着电影赋予这个世界的美好时光，一边孜孜不倦"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_desallcmovie_add_detials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="一群被电影召唤的人，汇聚到了Mtime，
            一边享受着电影赋予这个世界的美好时光，
            一边孜孜不倦的将电影的点点滴滴汇入到网络的海洋中。
            时光网是查询电影资讯和写影评讨论电影的地方。
            不是免费收看和下载电影的地方。"/>
    </FrameLayout>
    <ImageButton
        android:clickable="true"
        android:id="@+id/ib_extend_textdesc_add_detials"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_expand_small_holo_light"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#55000000"/>
    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:clickable="true"
            android:id="@+id/tv_moviesomes_add_detials"
            android:padding="3dp"
            android:text="电影周边(3)"
            android:textSize="20sp"
            android:layout_marginRight="3dp"
            android:drawableRight="@drawable/icon_arrow_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/fl_1_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_1_"
                        android:layout_width="95dp"
                        android:layout_height="120dp"/>
                    <ImageView
                        android:src="@drawable/pic_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <TextView
                    android:lines="2"
                    android:id="@+id/tv_name_1_"
                    android:text="5CM星战光剑黑色卫衣"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_price_1_"
                    android:text="￥45.0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/fl_2_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_2_"
                        android:layout_width="95dp"
                        android:layout_height="120dp"/>
                    <ImageView
                        android:src="@drawable/pic_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <TextView
                    android:lines="2"
                    android:id="@+id/tv_name_2_"
                    android:text="5CM星战光剑黑色卫衣"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_price_2_"
                    android:text="￥45.0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/fl_3_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_3_"
                        android:layout_width="95dp"
                        android:layout_height="120dp"/>
                    <ImageView
                        android:src="@drawable/pic_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <TextView
                    android:lines="2"
                    android:id="@+id/tv_name_3_"
                    android:text="5CM星战光剑黑色卫衣"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_price_3_"
                    android:text="￥45.0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#55000000"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:text="视频剧照"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="14sp"
                    android:text="相关视频"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_movie_add_"
                    android:background="@drawable/lead_bg1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:text="相关剧照"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_image_add_"
                    android:background="@drawable/lead_bg2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#55000000"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_actorcount_add_"
            android:textSize="20sp"
            android:text="N位演职人员"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_actor_add_detials"
            android:layout_width="match_parent"
            android:layout_height="280dp"/>
    </LinearLayout>

</LinearLayout>
