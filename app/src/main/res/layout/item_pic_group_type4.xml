<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical"
              android:padding="5dp"
              android:paddingBottom="10dp"
              android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_item_pic_group_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="#FFB024"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="图集"
        android:textColor="#ffffff"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_item_pic_group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="欧美明星一周街拍"
        android:textColor="#999999"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_pic_group_img1"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/img_default_90x90"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_item_pic_group_img2"
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/img_default_45x45"/>

            <ImageView
                android:id="@+id/iv_item_pic_group_img3"
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/img_default_45x45"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/tv_item_pic_group_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2016-1-18 8:49:57"
            android:textColor="#BBBBBB"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_item_pic_group_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  评论 59"
            android:textColor="#BBBBBB"
            android:textSize="13sp"/>
    </LinearLayout>
</LinearLayout>