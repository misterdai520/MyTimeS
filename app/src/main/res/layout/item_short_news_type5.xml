<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_short_news_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#FFB024"
                android:gravity="center"
                android:padding="2dp"
                android:text="简讯"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_item_short_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="《死侍》将无缘内地院线"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_short_news_content"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:lines="3"
                android:text="因暴力行为与裸露场面太密集无从下“刀”"
                android:textColor="#999999"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_short_news_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2016-1-18 8:49:57"
                    android:textColor="#BBBBBB"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_item_short_news_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="评论 59"
                    android:textColor="#BBBBBB"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_item_short_news_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/img_default_45x45" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>