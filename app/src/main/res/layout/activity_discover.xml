<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.design.widget.TabLayout
        android:id="@+id/tabpageIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/store_green_bg"
        app:tabSelectedTextColor="@color/store_white_bg"
        app:tabTextColor="@color/store_gay_bg"
        android:background="@drawable/dialog_bg_blue"
        android:scrollbarSize="20sp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_discover"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>