<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="140dp"
    android:layout_height="280dp"
    android:padding="10dp"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/abcd"
        android:visibility="invisible"
        android:padding="2dp"
        android:text="主要演员"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/icon_personmovieactor_add_"
        android:background="@drawable/lead_bg2"
        android:layout_width="110dp"
        android:layout_height="110dp" />
    <TextView
        android:id="@+id/tv_hz_personactor_"
        android:padding="2dp"
        android:text="管虎"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_py_personactor_"
        android:gravity="center"
        android:padding="2dp"
        android:text="guan hu"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/icon_in_personmovieactor_add_"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/tv_in_personmovieactor_add_"
        android:padding="2dp"
        android:text="六爷"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>